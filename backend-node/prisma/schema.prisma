generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  OWNER
  ADMIN
}

enum BoardingType {
  SINGLE_ROOM
  SHARED_ROOM
  ANNEX
  HOUSE
}

enum GenderPref {
  MALE
  FEMALE
  ANY
}

enum BoardingStatus {
  DRAFT
  PENDING_APPROVAL
  ACTIVE
  REJECTED
  INACTIVE
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  passwordHash     String
  firstName        String
  lastName         String
  role             Role     @default(STUDENT)
  phone            String?
  university       String?
  nicNumber        String?
  profileImageUrl  String?
  isVerified       Boolean  @default(false)
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  emailVerificationTokens EmailVerificationToken[]
  passwordResetTokens     PasswordResetToken[]
  refreshTokens           RefreshToken[]
  boardings               Boarding[]
  savedBoardings          SavedBoarding[]
  reservations            Reservation[]  @relation("StudentReservations")
  reviews                 Review[]       @relation("StudentReviews")
  payments                Payment[]      @relation("StudentPayments")
  visitRequests           VisitRequest[] @relation("StudentVisitRequests")

  @@map("users")
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("email_verification_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  used      Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}

model RefreshToken {
  id               String    @id @default(cuid())
  tokenHash        String    @unique
  userId           String
  expiresAt        DateTime
  createdAt        DateTime  @default(now())
  revokedAt        DateTime?
  replacedByTokenId String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model Boarding {
  id               String         @id @default(cuid())
  ownerId          String
  title            String
  slug             String         @unique
  description      String
  city             String
  district         String
  address          String?
  monthlyRent      Int
  boardingType     BoardingType
  genderPref       GenderPref
  isFurnished      Boolean        @default(false)
  hasWifi          Boolean        @default(false)
  nearUniversity   String?
  latitude         Float
  longitude        Float
  maxOccupants     Int
  currentOccupants Int            @default(0)
  status           BoardingStatus @default(DRAFT)
  rejectionReason  String?
  isDeleted        Boolean        @default(false)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  owner   User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  images  BoardingImage[]
  rules   BoardingRule[]
  savedBy SavedBoarding[]
  reservations  Reservation[]
  reviews       Review[]
  visitRequests VisitRequest[]

  @@map("boardings")
}

model BoardingImage {
  id         String   @id @default(cuid())
  boardingId String
  url        String
  publicId   String
  createdAt  DateTime @default(now())

  boarding Boarding @relation(fields: [boardingId], references: [id], onDelete: Cascade)

  @@map("boarding_images")
}

model BoardingRule {
  id         String @id @default(cuid())
  boardingId String
  rule       String

  boarding Boarding @relation(fields: [boardingId], references: [id], onDelete: Cascade)

  @@map("boarding_rules")
}

model SavedBoarding {
  id         String   @id @default(cuid())
  boardingId String
  studentId  String
  createdAt  DateTime @default(now())

  boarding Boarding @relation(fields: [boardingId], references: [id], onDelete: Cascade)
  student  User     @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([boardingId, studentId])
  @@map("saved_boardings")
}

// ─────────────────────────────────────────────────────────────
// Reservation & Rental Tracking
// ─────────────────────────────────────────────────────────────

enum ReservationStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
  REJECTED
  EXPIRED
}

enum RentalPeriodStatus {
  UPCOMING
  DUE
  PARTIALLY_PAID
  PAID
  OVERDUE
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  ONLINE
}

enum PaymentStatus {
  PENDING
  CONFIRMED
  REJECTED
}

enum VisitRequestStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
  EXPIRED
}

model Reservation {
  id               String            @id @default(cuid())
  studentId        String
  boardingId       String
  status           ReservationStatus @default(PENDING)
  moveInDate       DateTime          @db.Date
  specialRequests  String?
  rentSnapshot     Int
  boardingSnapshot Json
  rejectionReason  String?
  expiresAt        DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student       User          @relation("StudentReservations", fields: [studentId], references: [id], onDelete: Cascade)
  boarding      Boarding      @relation(fields: [boardingId], references: [id], onDelete: Cascade)
  rentalPeriods RentalPeriod[]
  review        Review?
  payments      Payment[]

  @@map("reservations")
}

model Review {
  id            String   @id @default(cuid())
  reservationId String   @unique
  studentId     String
  boardingId    String
  rating        Int
  comment       String?
  createdAt     DateTime @default(now())

  reservation Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  student     User        @relation("StudentReviews", fields: [studentId], references: [id], onDelete: Cascade)
  boarding    Boarding    @relation(fields: [boardingId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model RentalPeriod {
  id            String             @id @default(cuid())
  reservationId String
  periodLabel   String
  dueDate       DateTime           @db.Date
  amountDue     Int
  status        RentalPeriodStatus @default(UPCOMING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reservation Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  payments    Payment[]

  @@map("rental_periods")
}

model Payment {
  id              String        @id @default(cuid())
  rentalPeriodId  String
  reservationId   String
  studentId       String
  amount          Decimal       @db.Decimal(12, 2)
  paymentMethod   PaymentMethod
  referenceNumber String?
  proofImageUrl   String?
  status          PaymentStatus @default(PENDING)
  paidAt          DateTime
  rejectionReason String?
  confirmedAt     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rentalPeriod RentalPeriod @relation(fields: [rentalPeriodId], references: [id], onDelete: Cascade)
  reservation  Reservation  @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  student      User         @relation("StudentPayments", fields: [studentId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model VisitRequest {
  id               String             @id @default(cuid())
  studentId        String
  boardingId       String
  status           VisitRequestStatus @default(PENDING)
  requestedStartAt DateTime
  requestedEndAt   DateTime
  message          String?
  rejectionReason  String?
  expiresAt        DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student  User     @relation("StudentVisitRequests", fields: [studentId], references: [id], onDelete: Cascade)
  boarding Boarding @relation(fields: [boardingId], references: [id], onDelete: Cascade)

  @@map("visit_requests")
}
